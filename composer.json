{
    "name": "decodelabs/kairos",
    "description": "Time and date utilities",
    "type": "library",
    "keywords": [ ],
    "license": "MIT",
    "authors": [ {
            "name": "Tom Wright",
            "email": "tom@inflatablecookie.com"
        } ],
    "require": {
        "php": "^8.4",
        "psr/clock": "^1.0",

        "decodelabs/coercion": "^0.3.5",
        "decodelabs/exceptional": "^0.6.3",
        "decodelabs/nuance": "^0.1",

        "nesbot/carbon": "^3.10.2"
    },
    "require-dev": {
        "decodelabs/lucid": "^0.8",
        "decodelabs/phpstan-decodelabs": "^0.7.0"
    },
    "conflict": {
        "decodelabs/lucid": "<0.6"
    },
    "provide": {
        "psr/clock-implementation": "1.0"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Kairos\\": "src/Kairos/"
        },
        "classmap": [
            "src/Lucid/"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.1.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
